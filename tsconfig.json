{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "lib": ["dom", "esnext",  "es2019",],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["client", "server"],
  "exclude": ["node_modules"]
}